// FORMS STYLING

// Base styles
input[type='email'],
input[type='number'],
input[type='password'],
input[type='search'],
input[type='tel'],
input[type='text'],
input[type='url'],
input[type='color'],
input[type='date'],
input[type='datetime'],
input[type='datetime-local'],
input[type='month'],
input[type='time'],
input[type='week'],
textarea
  $input(selection-color, 230px)
  border: 1px white solid
  padding: 0.38em
  padding-bottom 0.2em

  &.disabled
    input-disabled()
  &.success
    input-success()
  &.warning
    input-warning()
  &.error
    input-error()

// Add classes for labels etc
fields(left, 250px)

fieldset
  padding 0
  margin 0
  padding-bottom 15px
  border none


input[type='checkbox'],
input[type='radio']
  margin-right 6px
  & + label
    margin-right 20px