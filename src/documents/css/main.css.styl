// Modal v2

.modal--gallery
  // Firstly, hide any overflows
  .modal-inner
    overflow-y: hidden

  // Add 100px bottom padding to hold the thumbnails
  .modal-content
    padding-bottom 110px
    border: 0
  
  .modal-detail
    min-height: 200px
    min-width: 200px

  // And shift the footer up 100px (thumbs are max 80 pixels high)
  footer
    position relative
    top -100px
    padding 0
    border-radius 0
    border 0
    ul.modal-content-list
      position: absolute
      display: block
      white-space: nowrap
      overflow-x: scroll
      overflow-y: hidden
      right: 20px
      left: 20px
      margin: 0
      li
        float: none
        display: inline-block
        padding-right: 0.3em
        padding-left: 0

  // Correct caption
  .modal--gallery-caption
    position: absolute
    bottom: 110px
    left: 20px
    right: 20px
    border: 0
    color: #D8D8D8
    background-color: rgba(0,0,0,0.5)
    p
      margin: 0.7em

